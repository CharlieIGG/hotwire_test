<%= turbo_frame_tag "to_do_form" do %>
  <%= form_with(model: to_do, id: dom_id(to_do)) do |form| %>
    <div class="mb-3">
      <div class="input-group">
        <%= form.text_field :title, class: "form-control", placeholder: "Add a task here. Press Enter to save.", autofocus: true %>
        <%= form.submit class: "btn btn-primary"  %>
      </div>
      <% to_do.errors.each do |error| %>
        <div class="form-text text-danger">
          <%= error.full_message %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
